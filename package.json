{
  "name": "tarkov-iceman",
  "version": "0.1.2",
  "description": "A Discord bot and api for Tarkov",
  "main": "index.js",
  "scripts": {
    "postinstall": "tsc",
    "serve:bot": "node dist/bot/index.js",
    "serve:bot:hot": "nodemon dist/bot/index.js --ignore storage",
    "serve:api": "node dist/server/index.js",
    "serve:api:hot": "nodemon dist/server/index.js --ignore storage",
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "author": "Chris Rowles <me@rowles.ch>",
  "license": "ISC",
  "dependencies": {
    "commander": "^10.0.0",
    "cors": "^2.8.5",
    "discord.js": "^13.8.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.2",
    "jsdom": "^21.0.0",
    "mongodb": "^5.1",
    "typescript": "^4.9"
  },
  "devDependencies": {
    "@types/cors": "^2.8",
    "@types/express": "^4.17",
    "@types/jsdom": "^21.1",
    "@types/mongodb": "^4.0",
    "@types/node": "^18.0",
    "@types/swagger-ui-express": "^4.1",
    "@typescript-eslint/eslint-plugin": "^5.54",
    "@typescript-eslint/parser": "^5.54",
    "eslint": "^8.35",
    "nodemon": "^2.0",
    "swagger-ui": "^4.15",
    "swagger-ui-express": "^4.6",
    "ts-node": "^10.9"
  }
}
